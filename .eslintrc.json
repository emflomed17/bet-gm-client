{
    "env": {
        "browser": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/flowtype"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "no-use-before-define": "off",
        "react/prop-types": "off",
        "comma-dangle": "off",
        "import/prefer-default-export": "off",
        "global-require": "off",
        "react/jsx-props-no-spreading": "off",
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "printWidth": 100
          }
        ],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-console": "error",
        "semi": ["error", "never"]
      }
}
